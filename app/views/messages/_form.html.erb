<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :name, class:"form-control", placeholder:"Name: eg. John Doe" %>
  </div>

  <div class="field">
    <%= form.text_field :email, class:"form-control", placeholder:"Email: eg. john@doe.com" %>
  </div>

  <div class="field">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone: eg. +977 98********" %>
  </div>

  <div class="field">
    <%= form.text_field :key, class:"form-control", placeholder:"Unique Key: eg. 123456" %>
  </div>

  <div class="field">
    <%= form.text_area :message, class:"form-control", placeholder:"Message: eg. Secret Message" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
